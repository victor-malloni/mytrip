<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextTip"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/purple_700" />

        <EditText
            android:id="@+id/editDistancia"
            style="@style/mcustomEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/distancia"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextTip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="km total"
            android:textAllCaps="true"
            android:textColor="@color/colorTextTip"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editPreco"
            style="@style/mcustomEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/preco"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextTip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="preÃ§o por litro"
            android:textAllCaps="true"
            android:textColor="@color/colorTextTip"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editAutonomia"
            style="@style/mcustomEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="@string/autonomia"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextTip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="km/l"
            android:textAllCaps="true"
            android:textColor="@color/colorTextTip"
            android:textSize="10sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Gasto total:"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editResultado"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="R$ 00,00"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/round_btn"
            android:padding="20dp"
            android:text="@string/calcular"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>